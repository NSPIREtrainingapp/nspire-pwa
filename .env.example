# ============================================
# NSPIRE TRAINING APP - BACKEND CONFIGURATION
# ============================================

# Server Configuration
PORT=3001
NODE_ENV=production

# Frontend URL for CORS
FRONTEND_URL=http://localhost:8080

# ============================================
# GOHIGHLEVEL CONFIGURATION
# ============================================

# GoHighLevel API Settings
GHL_API_BASE=https://services.leadconnectorhq.com
GHL_TOKEN=your_sub_account_private_token_here
GHL_LOCATION_ID=your_location_id_here

# ============================================
# APP CONFIGURATION
# ============================================

# Customer Portal & Support
RENEW_URL=https://your-customer-portal.com/renew
SUPPORT_EMAIL=support@nspiretrainingapp.com

# Session Management
SESSION_TTL_HOURS=24
GRACE_TTL_HOURS=168             # 7 days offline access
LOGIN_TIMEOUT_MS=1200           # API timeout per call

# ============================================
# SECURITY CONFIGURATION
# ============================================

# JWT & Session Secrets (Generate strong random strings)
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters
SESSION_SECRET=your_session_secret_minimum_32_characters

# ============================================
# DATABASE CONFIGURATION (Future)
# ============================================

# PostgreSQL (when you add real user database)
# DATABASE_URL=postgresql://username:password@localhost:5432/nspire_users

# MongoDB (alternative)
# MONGODB_URI=mongodb://localhost:27017/nspire_users

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================

# SMTP Settings for notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# ============================================
# LOGGING & MONITORING
# ============================================

LOG_LEVEL=info

# Optional: Error tracking service
# SENTRY_DSN=your_sentry_dsn_here